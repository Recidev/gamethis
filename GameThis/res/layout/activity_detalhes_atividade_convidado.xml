<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.recidev.gamethis.ui.DetalhesAtividadeConvidadoActivity" >
    
    		 <TextView
                 android:id="@+id/textoDescricaoAtividadeConvidado"
                 android:layout_width="80dp"
                 android:layout_height="30dp"
                 android:gravity="center|left"
                 android:maxLines="1"
                 android:text="Descrição: "
                 android:textAppearance="?android:attr/textAppearanceListItem"
                 android:textSize="15sp" />
             
             <TextView
                 android:id="@+id/textoDescricaoAtividadeConvidadoValor"
                 android:layout_width="220dp"
                 android:layout_height="55dp"
                 android:layout_marginLeft="82dp"
                 android:layout_marginTop="5dp"
                 android:gravity="left"
                 android:text="Game This"
                 android:textAppearance="?android:attr/textAppearanceListItem"
                 android:textSize="15sp" />
    
			<TextView
			    android:id="@+id/textoPontosAtividadeConvidadoDetalhe"
			    android:layout_width="60dp"
			    android:layout_height="30dp"
			    android:layout_marginTop="70dp"
			    android:gravity="center|left"
			    android:text="Pontos: "
			    android:textAppearance="?android:attr/textAppearanceListItem"
			    android:textSize="15sp" />
			
			<TextView
			    android:id="@+id/textoPontosAtividadeConvidadoDetalheValor"
			    android:layout_width="60dp"
			    android:layout_height="30dp"
			    android:layout_marginLeft="70dp"
			    android:layout_marginTop="70dp"
			    android:gravity="center|left"
			    android:text="5"
			    android:textAppearance="?android:attr/textAppearanceListItem"
			    android:textSize="15sp" />

             <TextView
                 android:id="@+id/textoDuracaoAtividadeConvidado"
                 android:layout_width="80dp"
                 android:layout_height="60dp"
                 android:layout_marginTop="100dp"
                 android:gravity="center|left"
                 android:text="Duração: "
                 android:textAppearance="?android:attr/textAppearanceListItem"
                 android:textSize="15sp" />
             
             <TextView
                 android:id="@+id/textoDuracaoAtividadeConvidadoValor"
                 android:layout_width="70dp"
                 android:layout_height="60dp"
                 android:layout_marginLeft="80dp"
                 android:layout_marginTop="100dp"
                 android:gravity="center|left"
                 android:text="2"
                 android:textAppearance="?android:attr/textAppearanceListItem"
                 android:textSize="15sp" />

			    <CheckBox
			        android:id="@+id/checkBoxRealizarAtividade"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/textoDuracaoAtividadeConvidado"
			        android:layout_below="@+id/textoDuracaoAtividadeConvidado"
			        android:layout_marginTop="18dp"
			        android:text="Realizar atividade"
			        android:textSize="15sp" />
			    
			    <TextView
			        android:id="@+id/textoJogadorAtividade"
			        android:layout_width="120dp"
			        android:layout_height="30dp"
			        android:layout_marginTop="230dp"
			        android:gravity="center|left"
			        android:maxLines="1"
			        android:text="Atribuído para: "
			        android:textAppearance="?android:attr/textAppearanceListItem"
			        android:textSize="15sp" />
			    
			     <ImageView
			         android:id="@+id/avatarJogador"
			         android:layout_width="40dp"
			         android:layout_height="40dp"
			         android:layout_marginTop="260dp"
			         android:src="@drawable/interrogacao" />
				
				    <TextView
				        android:id="@+id/login_jogador_atividade"
				        android:layout_width="300dp"
				        android:layout_height="40dp"
				        android:layout_marginLeft="20dp"
				        android:layout_marginTop="260dp"
				        android:layout_toRightOf="@+id/avatarJogador"
				        android:ellipsize="end"
				        android:gravity="center|left"
				        android:maxLines="2"
				        android:textSize="15sp" />

</RelativeLayout>
